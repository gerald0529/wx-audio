.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

.choose {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
}
.choose .choose-line {
  margin: 0 30rpx;
}

.title {
  display: flex;
  align-items: center;
  padding-top: 15rpx;
}
.title .icon {
  color: #1a4681;
}
.title .title-name {
  font-size: 28rpx;
  color: #999999;
}

.order {
  margin: 0 20rpx 20rpx;
  box-shadow: 0 0 8rpx 0 rgba(187, 187, 187, 0.8);
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #999999;
  background-color: #fff;
}
.order .order-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order .order-info {
  padding: 15rpx;
}

.order-info {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.order-info .info-item {
  margin: 15rpx 0;
  box-sizing: border-box;
  width: calc(1 / 3 * 100%);
  text-align: center;
  font-size: 28rpx;
}
.order-info .info-item > view {
  margin: 10rpx 0;
}
.order-info .info-item .info-name {
  color: #999999;
}
.order-info .info-item .info-number {
  color: #db3636;
}
