.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

page {
  height: 100%;
}

.swiper1 {
  height: 425rpx;
}
.swiper1 swiper-item {
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  left: 5%;
  width: 90% !important;
  border-radius: 20rpx;
}
.swiper1 swiper-item image {
  box-sizing: border-box;
  box-shadow: 0 0 30rpx 0 #ccc;
  border-radius: 20rpx;
  width: 100%;
  height: 100%;
}
.swiper1 swiper-item .active {
  transform: scale(1.2);
  transition: all 0.5s;
}

.ad {
  display: flex;
}
.ad .swiper2 {
  width: 100%;
  height: 100rpx;
}
.ad .swiper2 swiper-item {
  display: flex;
  align-items: center;
  color: #333333;
}
.ad .swiper2 swiper-item .content {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.ad .swiper2 swiper-item .icon {
  margin: 0 30rpx;
  color: #a5a5a5;
}
.ad .more {
  flex-basis: 250rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff9d00;
}

.tab {
  display: flex;
  justify-content: space-around;
  padding-bottom: 30rpx;
  font-size: 30rpx;
  color: #999999;
  border-bottom: 20rpx solid #f2f2f2;
}
.tab .tab-select {
  position: relative;
  color: #ff9d00;
}

.type-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
}
.type-list .item {
  display: flex;
  align-items: center;
  width: 48%;
  box-sizing: border-box;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 0 16rpx 0 rgba(210, 207, 207, 0.5);
  border-radius: 30rpx;
  color: #999999;
}
.type-list .item .item-name {
  flex: none;
  width: 120rpx;
  text-align: right;
  font-size: 26rpx;
}
.type-list .item .item-select {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.type-btn {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}
.type-btn .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 410rpx;
  height: 90rpx;
  box-shadow: 0 0 16rpx 0 rgba(14, 47, 91, 0.5);
  border-radius: 45rpx;
  color: #ffffff;
  background-color: #1a4681;
}

.tab_new {
  display: flex;
  font-size: 30rpx;
  color: #999999;
}
.tab_new view {
  flex: 1;
  padding: 15rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab_new .tab-select {
  position: relative;
  color: #1a4681;
}
.tab_new .tab-select::after {
  content: "";
  position: absolute;
  right: -10rpx;
  top: -5rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #1a4681;
  opacity: 0.3;
}

.home-list {
  border-bottom: 20rpx solid #f2f2f2;
  padding: 30rpx 30rpx 0;
}
.home-list image {
  width: 100%;
}
.home-list .item-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 80rpx;
}
.home-list .item-btn view:nth-child(1) {
  color: red;
}
.home-list .item-btn view:nth-child(2) {
  text-decoration: line-through;
  color: #656565;
}
.home-list .item-btn view:nth-child(3) {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 50rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #FFF;
  background-color: #ff9d00;
}
