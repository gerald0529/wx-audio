.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

.new_item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1px solid #d8d8d8;
}
.new_item image {
  flex: none;
  width: 140rpx;
  height: 140rpx;
}
.new_item .item-content {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.new_item .item-content .title {
  color: #333;
}
.new_item .item-content .watch {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 26rpx;
}
.new_item .item-content .watch .icon {
  font-size: 26rpx;
}
.new_item .item-content .watch view:last-child {
  margin-left: 50rpx;
}
.new_item .item-content .content {
  height: 2.5em;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  color: #656565;
}
