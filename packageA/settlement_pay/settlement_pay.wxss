.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

.pay {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 300rpx;
}
.pay .pay-price text:last-child {
  font-size: 56rpx;
  color: red;
}
.pay .pay-desc {
  margin-top: 50rpx;
}
.pay-btn {
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  color: #ffffff;
  background-color: red;
}
