.order-list {
  margin: 20rpx 20rpx 0;
  color: #666666;
}
.order-list .item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 0 8rpx 0 rgba(187, 187, 187, 0.5);
  border-radius: 10rpx;
}
.order-list .item .item-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  color: #c1c1c1;
}
.order-list .item .order-info {
  display: flex;
  align-items: center;
}
.order-list .item .order-info .info-type {
  flex: none;
  font-size: 24rpx;
  color: #666666;
}
.order-list .item .order-info .info {
  flex: 1;
  margin: 20rpx 0 20rpx 20rpx;
}
.order-list .item .order-info .info .info-name {
  font-size: 26rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.order-list .item .order-info .info .info-price {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #999999;
}
.order-list .item .order-info .info .info-price .price-box {
  margin-right: 30rpx;
}
.order-list .item .order-info .info .info-price .price-box .price {
  color: red;
}
.order-list .item .order-info .info .info-price .pay-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 60rpx;
  margin-left: 30rpx;
  border-radius: 8rpx;
  color: #ffffff;
  background-color: red;
}
.order-list .item .order-info .info .info-price .pay-after {
  background-color: #ccc;
}

.process-y {
  padding: 0 30rpx;
}
.process-y .process-item {
  position: relative;
  padding: 15rpx 0;
}
.process-y .process-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: -2rpx;
  height: 100%;
  border-left: 4rpx solid #c5c3c3;
}
.process-y .process-item:first-child::before {
  top: 50%;
  height: 50%;
}
.process-y .process-item:last-child::before {
  top: 0;
  height: 50%;
}
.process-y .process-item:only-child::before {
  display: none;
}
.process-y .process-item::after {
  content: "";
  position: absolute;
  top: calc(50% - 15rpx);
  left: -15rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #c5c3c3;
}
.process-y .process-item .item-content {
  margin-left: 30rpx;
}
.process-y .item-selected::before {
  border-left: 4rpx solid red;
}
.process-y .item-selected::after {
  background-color: red;
}

.process-y .item-content {
  font-size: 24rpx;
}
.process-y .item-content .content-date {
  font-size: 22rpx;
}

