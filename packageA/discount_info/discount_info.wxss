.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

page {
  padding-bottom: 100rpx;
}

button {
  padding: 0;
  background: #FFFFFF;
  border-radius: 0;
}
button::after {
  border: none;
}

.top {
  position: relative;
  width: 100%;
}
.top image {
  width: 100%;
}
.top .swiper {
  width: 100%;
}
.top .swiper image {
  width: 100%;
}
.top .countdown {
  box-sizing: border-box;
  padding: 30rpx;
  position: absolute;
  bottom: 0;
  width: 100%;
  text-align: right;
  color: #ffffff;
  background-color: rgba(0, 0, 0, 0.2);
}

.title {
  padding: 30rpx;
  border-bottom: 20rpx solid #eee;
  font-size: 36rpx;
  color: #333;
}

.type-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
}
.type-list .item {
  width: 48%;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  box-shadow: 0 0 16rpx 0 rgba(210, 207, 207, 0.5);
  border-radius: 30rpx;
  color: #999999;
}
.type-list .item-select {
  padding: 20rpx;
  width: 100%;
}
.type-list .item-color {
  color: #ed4f50;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #ccc;
  display: flex;
  height: 100rpx;
  background: #FFFFFF;
}
.footer view {
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer .icon {
  color: #666;
}
.footer .home {
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 5rpx;
  flex: 1;
}
.footer .share {
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 5rpx;
  flex: 1;
}
.footer .cart {
  width: 180rpx;
  color: #FFFFFF;
  background: #ff9d00;
}
.footer .pay {
  width: 180rpx;
  color: #FFFFFF;
  background: #ed4f50;
}

.poster {
  position: fixed;
  top: 20%;
  left: 12%;
  z-index: 200;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 280px;
  background: #fff;
  padding: 30rpx 15rpx;
  border-radius: 10rpx;
}
.poster .cvs {
  margin-bottom: 15rpx;
}
.poster .poster_btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80%;
  height: 80rpx;
  border-radius: 80rpx;
  color: #FFF;
  background: #385eff;
}

.mu {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.6;
  background-color: #000000;
}

.action-sheet-share {
  line-height: 1.35;
}
